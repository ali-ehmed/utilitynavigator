			<%= ff.select :directory_listing_items, options_for_select(["Required", "Not Include"]), {prompt: "--Select--"}, onChange: "$packages.setRequiredFields(this);" %>
		</li>
		<!-- Directory Listing -->
		<%= render partial: "admin/packages/shared/cox/items_for_directory_listing", locals: { ff: ff } %>

		<li>
			<label class="label">
