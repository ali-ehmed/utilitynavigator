<% if product.name.downcase == :cable.to_s %>
	<%= fields_for :cable do |ff| %>
		<li class="string input optional stringish" id="package_name_input">
			<% Package::CABLE_TV.each_with_index do |cable_tv, count| %>
				<h3 style="font-weight:bold;"><%= cable_tv %></h3>
				<% count += 1 %>
				<ol>
					<!-- <li>
						<label for="is_required" class="label">
							Is Required
						</label>
						<%#= ff.select "is_required_#{count}", options_for_select(["Required", "Optional", "Not Include"]) %>
					</li> -->
					<li>
						<label for="provider_name" class="label">
							Contour Record 6 HD-DVR Receiver &amp; Service
						</label>
						<%= ff.select "checkout_select", options_for_select(["Include", "Not Include", "Add Price"]), {prompt: "--Select--"}, class: "package_select_field", onchange: "$packages.addPriceField(this);" %>

						<%= ff.text_field "contour_record_dvr_#{count}", style: "display: none;width: calc(78% - 22px);", onblur: "$packages.packagePriceValidation(this);", class: "admin_checkout_price" %>
					</li>
					<li>
						<label for="provider_name" class="label">
							Contour HD-DVR Receiver
						</label>
						<%= ff.select "checkout_select", options_for_select(["Include", "Not Include", "Add Price"]), {prompt: "--Select--"}, class: "package_select_field", onchange: "$packages.addPriceField(this);" %>

						<%= ff.text_field "contour_hd_dvr_#{count}", style: "display: none;width: calc(78% - 22px);", onblur: "$packages.packagePriceValidation(this);", class: "admin_checkout_price" %>

					</li>
					<li>
						<label for="provider_name" class="label">
							Contour HD Receiver
						</label>
						<%= ff.select "checkout_select", options_for_select(["Include", "Not Include", "Add Price"]), {prompt: "--Select--"}, class: "package_select_field", onchange: "$packages.addPriceField(this);" %>

						<%= ff.text_field "contour_hd_receiver_#{count}", style: "display: none;width: calc(78% - 22px);", onblur: "$packages.packagePriceValidation(this);", class: "admin_checkout_price" %>
					</li>
					<li>
						<label for="provider_name" class="label">
							Mini Box
						</label>
						<%= ff.select "checkout_select", options_for_select(["Include", "Not Include", "Add Price"]), {prompt: "--Select--"}, class: "package_select_field", onchange: "$packages.addPriceField(this);" %>

						<%= ff.text_field "mini_box_#{count}", style: "display: none;width: calc(78% - 22px);", onblur: "$packages.packagePriceValidation(this);", class: "admin_checkout_price" %>
					</li>
					<li>
						<label for="provider_name" class="label">
							Cable CARD
						</label>
						<%= ff.select "checkout_select", options_for_select(["Include", "Not Include", "Add Price"]), {prompt: "--Select--"}, class: "package_select_field", onchange: "$packages.addPriceField(this);" %>

						<%= ff.text_field "cable_card_#{count}", style: "display: none;width: calc(78% - 22px);", onblur: "$packages.packagePriceValidation(this);", class: "admin_checkout_price" %>
					</li>
				</ol>
			<% end %>
		</li>
		<li>
			<label class="label">
				Premium Movie Channels
			</label>
			<%= ff.select :premiums_items, options_for_select(["Required", "Not Include"]), {prompt: "--Select--"}, onChange: "$packages.setRequiredFields(this);" %>
		</li>
		<%= render partial: "admin/packages/shared/cox/items_for_premiums", locals: { ff: ff } %>
		<li>
			<label class="label">
				TV Paks
			</label>
			<%= ff.select :tv_paks_items, options_for_select(["Required", "Not Include"]), {prompt: "--Select--"}, onChange: "$packages.setRequiredFields(this);" %>
		</li>
		<%= render partial: "admin/packages/shared/cox/items_for_tv_paks", locals: { ff: ff } %>
	<% end %>
<% elsif product.name.downcase == :internet.to_s %>
	<%= fields_for :internet do |ff| %>
		<li>
			<label class="label">
				Internet Equiptment
			</label>
			<%= ff.select :internet_equiptment_items, options_for_select(["Required", "Not Include"]), {prompt: "--Select--"}, onChange: "$packages.setRequiredFields(this);" %>
		</li>
		<%= render partial: "admin/packages/shared/cox/items_for_internet_equiptment", locals: { ff: ff } %>

		<li>
			<label class="label">
				Cox Tech Solutions
