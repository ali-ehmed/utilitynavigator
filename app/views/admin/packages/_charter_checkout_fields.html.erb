			<%= ff.text_field "modem", style: "display: none;", class: "admin_checkout_price", value: "Included" %>
		</li>
		<li>
			<label class="label">
				Wifi Service &amp; Equiptment
			</label>
			<%= ff.select "checkout_select", options_for_select(["Free", "Not Include", "Add Price"]), {prompt: "--Select--"}, class: "package_select_field", onchange: "$packages.addPriceField(this);" %>

			<%= ff.text_field "wifi", style: "display: none;", class: "admin_checkout_price", value: "Included" %>
		</li>
		<li>
			<label class="label">
				Wifi Installation
			</label>
			<%= ff.select "checkout_select", options_for_select(["Free", "Not Include", "Add Price"]), {prompt: "--Select--"}, class: "package_select_field", onchange: "$packages.addPriceField(this);" %>

			<%= ff.text_field "wifi_installation", style: "display: none;", class: "admin_checkout_price", value: "Included" %>
		</li>
	<% end %>
