<% if product.name.downcase == :cable.to_s %>
	<%= fields_for :cable do |ff| %>
		<li class="string input optional stringish" id="package_name_input">
			<% Package::CABLE_TV.each_with_index do |cable_tv, count| %>
				<h3><%= cable_tv %></h3>
				<% count += 1 %>
				<ol>
					<li>
						<label for="is_required" class="label">
							Is Required
						</label>
						<%= ff.select "is_required_#{count}", options_for_select(["Required", "Optional", "Free"]) %>
					</li>
					<li>
						<label for="provider_name" class="label">
							DVR Box &amp; Service 
						</label>
						<%= ff.text_field "dvr_box_#{count}" %>
					</li>
					<li>
						<label for="provider_name" class="label">
							<%= Package::CABLE_TV.first == cable_tv ? "HD BOX" : "1 Additional TV" %>
						</label>
						<%= ff.text_field "additional_hd_#{count}" %>
					</li>
				</ol>
			<% end %>
		</li>
		<li>
			<label class="label">
				Premiums
			</label>
			<%= ff.select :premiums, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Digital Tier 1
			</label>
			<%= ff.select :digital_tier_1, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Digital Tier 2
			</label>
			<%= ff.select :digital_tier_2, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				International Channels
			</label>
			<%= ff.select :international_channels, options_for_select(["Required", "Free"]) %>
		</li>
	<% end %>
<% elsif product.name.downcase == :internet.to_s %>
	<%= fields_for :internet do |ff| %>
		<li>
			<label class="label">
				Internet Modem
			</label>
			<%= ff.text_field :modem %>
		</li>
		<li>
			<label class="label">
				Wifi Service &amp; Equiptment
			</label>
			<%= ff.text_field :wifi %>
		</li>
		<li>
			<label class="label">
				Wifi Installation
			</label>
			<%= ff.text_field :wifi_installation %>
		</li>
	<% end %>
<% else %>
	<%= fields_for :phone do |ff| %>
		<li>
			<label class="label">
				New phone number
			</label>
			<%= ff.select :new_phone_number, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Old phone number
			</label>
			<%= ff.select :old_phone_number, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Get 200 Minutes
			</label>
			<%= ff.select :get_200_minutes, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Mexico 500
			</label>
			<%= ff.select :mexico_500, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Get 500 Minutes
			</label>
			<%= ff.select :get_500_minutes, options_for_select(["Required", "Free"]) %>
		</li>
	<% end %>
<% end %>