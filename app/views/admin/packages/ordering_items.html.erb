<h3>
	<strong>Note:</strong>
	<ol>
		<li>All the fields are <strong>Free</strong> by default</li>
		<li>Donot Enter <strong>$</strong> sign for Prices</li>
		<li>Selecting <strong>Not Include</strong> will remove the field from package</li>
	</ol>
</h3>
<%= form_tag admin_packages_path(product_ids: @product_ids), method: :post do %>
	<% for product in @products do %>	
		<fieldset class="inputs">
			<legend><span><%= product.name %></span></legend>
			<ol>
				<% if @provider.name == Provider::CHARTER_SPECTRUM %>
					<%= render partial: "charter_checkout_fields", locals: { product: product } %>
				<% elsif @provider.name == Provider::TIME_WARNER %>
					<%= render partial: "twc_checkout_fields", locals: { product: product } %>
				<% else %>
					<%= render partial: "cox_checkout_fields", locals: { product: product } %>
				<% end %>
			</ol>
		</fieldset>

		<!-- Cox Provider other details -->
		<% if @provider.name == Provider::COX %>
			<fieldset class="inputs">
				<ol>
					<li>
						<label class="label">
							Cox Service Protection Plan
						</label>
						<%= select_tag :cox_service_protection_plan, options_for_select(["Free", "Required"]), onChange: "$packages.setRequiredFields(this);" %>
					</li>
					<li style="display:none;">
						<legend><span>Set price for Cox Service Protection Plan</span></legend>
						<ol>
							<li>
								<label for="provider_name" class="label">
									Protection Plan
								</label>
								<%= text_field_tag "protection_plan_service", params["protection_plan_service"], style: "width: calc(78% - 22px);", onblur: "$packages.packagePriceValidation(this);" %>
							</li>
						</ol>
					</li>
					<li>
						<label class="label">
							Service Agreement
						</label>
						<%= select_tag :service_agreement, options_for_select(["Not Include", "Include"]), onChange: "$packages.setRequiredFields(this);" %>
					</li>
					<li style="display:none;">
						<legend><span>Set price for Service Agreement</span></legend>
						<ol>
							<li>
								<label for="provider_name" class="label">
									Agreement Price
								</label>
								<%= text_field_tag "lock_rates_agreement", params["lock_rates_agreement"], style: "width: calc(78% - 22px);", onblur: "$packages.packagePriceValidation(this);" %>
							</li>
						</ol>
					</li>
				</ol>
			</fieldset>	
		<% end %>
	<% end %>
	<%= button_tag "Create Package", type: :submit %>
	<%= link_to "Cancel", admin_packages_path %>
<% end %>