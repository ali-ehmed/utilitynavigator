<% if product.name.downcase == :cable.to_s %>
	<%= fields_for :cable do |ff| %>
		<li class="string input optional stringish" id="package_name_input">
			<% Package::CABLE_TV.each_with_index do |cable_tv, count| %>
				<h3><%= cable_tv %></h3>
				<% count += 1 %>
				<ol>
					<!-- <li>
						<label for="is_required" class="label">
							Is Required
						</label>
						<%#= ff.select "is_required_#{count}", options_for_select(["Required", "Optional", "Free"]) %>
					</li> -->
					<li>
						<label for="<%= cable_tv.underscore %>" class="label">
							Enhanced DVR Box
						</label>
						<%= ff.text_field "dvr_box_#{count}" %>
					</li>
					<li>
						<label for="provider_name" class="label">
							<%= Package::CABLE_TV.first == cable_tv ? "HD BOX" : "1 Additional TV" %>
						</label>
						<%= ff.text_field "additional_hd_#{count}" %>
					</li>
					<li>
						<label for="provider_name" class="label">
							DTA
						</label>
						<%= ff.text_field "dta_#{count}" %>
					</li>
					<% if Package::CABLE_TV.last == cable_tv %>
						<li>
							<label for="provider_name" class="label">
								4th TV Install
							</label>
							<%= ff.text_field "4th_tv_install_#{count}" %>
						</li>
					<% end %>
				</ol>
			<% end %>
		</li>
		<li>
			<label class="label">
				More Fun with More Entertainment
			</label>
			<%= ff.select :more_fun_with_more_entertainment, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				More Fun for Every one
			</label>
			<%= ff.select :more_fun_for_everyone, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Epic Offer
			</label>
			<%= ff.select :more_fun_for_everyone, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Travel the world on your tv
			</label>
			<%= ff.select :more_fun_for_everyone, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				More spanish entertainment for everyone
			</label>
			<%= ff.select :more_fun_for_everyone, options_for_select(["Required", "Free"]) %>
		</li>
	<% end %>
<% elsif product.name.downcase == :internet.to_s %>
	<%= fields_for :internet do |ff| %>
		<li>
			<label class="label">
				Modem
			</label>
			<%= ff.text_field :modem %>
		</li>
		<li>
			<label class="label">
				WIFI
			</label>
			<%= ff.text_field :wifi %>
		</li>
	<% end %>
<% else %>
	<%= fields_for :phone do |ff| %>
		<li>
			<label class="label">
				New phone number
			</label>
			<%= ff.text_field :new_phone_number %>
		</li>
		<li>
			<label class="label">
				Transfer phone number
			</label>
			<%= ff.text_field :transfer_phone_number %>
		</li>
		<li>
			<label class="label">
				Voice Mail
			</label>
			<%= ff.text_field :voice_mail %>
		</li>
		<li>
			<label class="label">
				International one price
			</label>
			<%= ff.text_field :international_one_price %>
		</li>
		<li>
			<label class="label">
				Global penny plan
			</label>
			<%= ff.text_field :global_penny_plan %>
		</li>
	<% end %>
<% end %>