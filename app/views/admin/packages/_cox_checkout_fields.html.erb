<% if product.name.downcase == :cable.to_s %>
	<%= fields_for :cable do |ff| %>
		<li class="string input optional stringish" id="package_name_input">
			<% Package::CABLE_TV.each_with_index do |cable_tv, count| %>
				<h3 style="font-weight:bold;"><%= cable_tv %> <small style="font-size: 10px;">Required, N/A or included</small></h3>
				<% count += 1 %>
				<ol>
					<li>
						<label for="is_required" class="label">
							Is Required
						</label>
						<%= ff.select "is_required_#{count}", options_for_select(["Required", "Optional", "Free"]) %>
					</li>
					<li>
						<label for="provider_name" class="label">
							Contour Record 6 HD-DVR Receiver &amp; Service
						</label>
						<%= ff.text_field "contour_record_dvr_#{count}"%>
					</li>
					<li>
						<label for="provider_name" class="label">
							Contour HD-DVR Receiver
						</label>
						<%= ff.text_field "contour_hd_dvr_#{count}" %>
					</li>
					<li>
						<label for="provider_name" class="label">
							Contour HD Receiver
						</label>
						<%= ff.text_field "contour_hd_receiver_#{count}" %>
					</li>
					<li>
						<label for="provider_name" class="label">
							Mini Box
						</label>
						<%= ff.text_field "mini_box_#{count}" %>
					</li>
					<li>
						<label for="provider_name" class="label">
							Cable CARD
						</label>
						<%= ff.text_field "cable_card_#{count}" %>
					</li>
				</ol>
			<% end %>
		</li>
		<li>
			<label class="label">
				Premium Movie Channels
			</label>
			<%= ff.select :premiums, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				TV Paks
			</label>
			<%= ff.select :tv_paks, options_for_select(["Required", "Free"]) %>
		</li>
	<% end %>
<% elsif product.name.downcase == :internet.to_s %>
	<%= fields_for :internet do |ff| %>
		<li>
			<label class="label">
				Internet Equiptment
			</label>
			<%= ff.select :internet_equiptment, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Cox Tech Solutions 
			</label>
			<%= ff.select :cox_teck_solutions, options_for_select(["Required", "Free"]) %>
		</li>
	<% end %>
<% else %>
	<%= fields_for :phone do |ff| %>
		<li>
			<label class="label">
				Long Distance
			</label>
			<%= ff.select :long_distance, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Additional Calling Features
			</label>
			<%= ff.select :calling_features, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				International Calling Plan
			</label>
			<%= ff.select :international_calling_plan, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Mexico Calling Plan
			</label>
			<%= ff.select :mexico_calling_plan, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Directory Listing
			</label>
			<%= ff.select :directory_listing, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Telephone Outlet Installation Additional
			</label>
			<%= ff.select :telephone_outlet_installation, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Telephone Equipment (EMTA) 
			</label>
			<%= ff.select :telephone_equiptment, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Telephone Number porting
			</label>
			<%= ff.select :telephone_no_porting, options_for_select(["Required", "Free"]) %>
		</li>
		<li>
			<label class="label">
				Directory Name
			</label>
			<%= ff.text_field :directory_name %>
		</li>
		<li>
			<label class="label">
				Cox Service Protection Plan
			</label>
			<%= ff.select :cox_service_protection_plan, options_for_select(["Required", "Free"]) %>
		</li>
	<% end %>
<% end %>