<%= ff.fields_for :premiums do |f| %>
	<li style="display:none;">
		<legend><span>Set items for Premium Channels</span></legend>
		<ol>
			<% %w(hbo cinemax showtime movie_channel starz epix encore).each do |field| %>
				<li>
					<label for="provider_name" class="label">
						<%= field.humanize %>
					</label>
					<%= f.select "checkout_select", options_for_select(["Include", "Not Include", "Add Price"]), {prompt: "--Select--"}, class: "package_select_field", onchange: "$packages.addPriceField(this);" %>

					<%= f.text_field field.to_sym, style: "display: none;width: calc(78% - 22px);margin-left:20%;", onblur: "$packages.packagePriceValidation(this);", class: "admin_checkout_price", value: "Included" %>
				</li>
			<% end %>
		</ol>
	</li>
<% end %>
