console.log(window.active_product)
switch(window.active_product) {
	case "cable": 
		$("#cable_packages").append("<%= j render partial: 'shared/filtered_packages/cable', collection: @tv_packages, as: :tv_package %>")
		<% if @tv_packages.next_page %>
			$(".pagination").replaceWith("<%= j will_paginate(@tv_packages, renderer: BootstrapPagination::Rails) %>")
			$(".pagination").hide()
			$("button#see-more-cable-packages").removeAttr("disabled")
		<% else %>
			$("button#see-more-cable-packages").parent().prev().find(".pagination").remove()
			$("button#see-more-cable-packages").remove()
		<% end %>
		break
	case "internet":
