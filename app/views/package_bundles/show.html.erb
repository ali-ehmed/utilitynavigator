<div id="results-banner">
	<div class="row">
		<div class="col-md-6 address">
			<strong>Offer Showing for:</strong>
			<address><%= address(@attributes) %></address>
			<i class="glyphicon glyphicon-edit"></i> Change Address
		</div>
		<div class="col-md-6 companies">
			<strong>Our Providers</strong>
			<div class="row">
				<ul class="list-inline logos-list">
					<li class="col-md-3 col-xs-12">
						<%= image_tag("twc-search.png") %>
					</li>
					<li class="col-md-3 col-xs-12">
						<%= image_tag("cox-search.png") %>
					</li>
					<li class="col-md-3 col-xs-12">
						<%= image_tag("charter-search.png") %>
					</li>
				</ul>
			</div>
			<div class="row">
				<ul class="list-inline provider-count-list">
					<li class="col-md-3 text-center">
						(<%= @twc.count %>)
					</li>
					<li class="col-md-3 text-center">
						(<%= @charter.count %>)
					</li>
					<li class="col-md-3 text-center">
						(<%= @cox.count %>)
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>
<div id="package-details">
	<div class="container">
		<% if @provider_zipcode.blank? or @packages.blank? %>
			<div class="alert alert-danger">
				<strong>Sorry!</strong> Currently, our packages are not available in your area.
			</div>
		<% else %>
			<div class="row">
				<% @packages.each do |package| %>
					<div class="col-md-6 col-sm-12">
						<div class="panel panel-default">
							<div class="panel-body">
								<div class="row">
									<div class="col-md-9 col-sm-9">
										<div class="row">
											<div class="col-md-4 col-sm-4">
												<% if @provider.logo.present?  %>
													<%= image_tag @provider.logo.url(:medium), class: "img-rounded img-responsive" %>
												<% else %>
													<%= image_tag "No_Image_Available.png", class: "img-rounded img-responsive" %>
												<% end %>
											</div>
											<div class="form-group"></div>
											<div class="col-md-8 col-sm-8">
												<label><%= package.package_name %></label>
												<%= link_to "Plan Details", "#", class: "detail-link" %>
											</div>
										</div>
										<p class="package-description">
											<%= package.package_description.html_safe %>
										</p>
										<%= link_to "More Info & Promotions", "#", class: "detail-link" %>
										<br />
										<button class="btn btn-warning btn-lg choose-plan-btn">CHOOSE THIS PLAN</button>
										
									</div>
									<div class="col-md-3 col-sm-3">
										<div class="price-info">
											<strong>Starting at</strong>
											<strong class="price"><%= package.price %></strong>
											per month
											<br />
											<strong class="price-information"><%= package.price_info %></strong>
										</div>
										<div class="checkbox">
			                <%= check_box_tag :compare, {:class => "styled"}  %>
			                <label class="compare-label-checkbox">
			                  COMPARE
			                </label>
			              </div>
									</div>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
</div>


