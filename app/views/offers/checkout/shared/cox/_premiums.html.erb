<!-- Premiumns -->
<% if fields["premiums"].present? and fields["premiums"].values.any? &:present? %>
	<h4>Premium Movie Channels</h4>
	<ul>
		<% fields["premiums"].except("checkout_select").each do |key, val| %>
			<% if val.present? %>
				<li>
					<% if val.downcase == "included" %>
						<p>
							<%= key.humanize %> (<%= val %>)
						</p>
					<% else %>
						<div class="checkbox">
							<%= check_box_tag key.to_sym, false, false, {:class => "styled", data: { price: val }, onchange: "calculateEquiptmentCosts(this);"}  %>
							<label class="label-checkbox">
								<%= key.humanize %> ($<%= val %> Monthly)
							</label>
						</div>
					<% end %>

					<!-- Custom Description -->
					<a role="button" data-toggle="collapse" href="#collapse_<%= key %>" aria-expanded="false" aria-controls="collapseExample" class="view_more">View Details</a>
					<div class="collapse" id="collapse_<%= key %>">
						<% case key %>
						<% when "hbo" %>
							<p class="well">
								The most original and innovative shows are on HBO. Keep up with the most talked-about programs on television and bring the biggest blockbusters into your living room with HBO.
							</p>
						<% when "cinemax" %>
							<p class="well">
								Cinemax has you covered with the best Hollywood hits and action-packed original series.
							</p>
						<% when "showtime" %>
							<p class="well">
								With the hottest Original Series, sports and movies anywhere, Showtime Â® is premium entertainment at its best.
							</p>
						<% when "starz" %>
							<p class="well">
								Contemporary hit movies, original series and documentaries on six premium channels, most available in HD and On Demand.
							</p>
						<% end %>
					</div>
				</li>
			<% end %>
		<% end %>
	</ul>
<% end %>
