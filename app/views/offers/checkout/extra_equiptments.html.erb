<div class="extra_equiptments">
	<div class="container">
		<%= form_tag offer_checkout_path(@package, Package.checkout_steps.second.to_s), method: :get do %>
			<div class="row">
				<div class="col-md-9 col-sm-9">
					<blockquote>
					  <h2 class="page-header" style="margin: 20px 0 20px;">
							<%= @package.provider.name %> <small><%= @package.package_name %></small>
						</h2>
					  <footer>What would you like to take for your extra equiptments?</footer>
					</blockquote>
					<div class="panel panel-default">
						<div class="panel-body">
							<% @products.each do |product| %>
								<div class="bs-callout bs-callout-danger" id="callout-collapse-dependency">
									<h4><%= product.name %></h4> 
									<p>Here are some extra items for <strong><%= product.name %></strong>.</p> 
								</div>
								<%= render partial: "#{@package.provider.acronym}_equiptments", locals: { product: product, package: @package } %>
							<% end %>

							<h3>Installation</h3>
							<ul>
								<li>
									<div class="checkbox">
						        <%= check_box_tag :installation, @package.installation_price.downcase == "free" ? "" : false, false, {:class => "styled", data: { price: @package.installation_price }, onchange: "calculateEquiptmentCosts(this);"}  %>
						        <label class="label-checkbox">
						          Schedule an appointment for a technician to install my services (<%= @package.installation_price %>)Â 
						        </label>
						      </div>
								</li>
							</ul>
						</div>
					</div>
				</div>
				<div class="col-md-3 col-sm-3 follow-equiptments">
					<div class="panel panel-default">
						<div class="panel-heading">
							<div class="panel-title">
								<ul class="list-inline">
									<li>Plan Summary</li>
									<li class="pull-right">
										<%= link_to "Change Plan", root_path %>
									</li>
								</ul>
							</div>
						</div>
						<div class="panel-body">
							<ul class="list-unstyled">
								<li class="summary-logo">
									<%= provider_logo(@package.provider) %>
								</li>
								<hr />
								<li>
									<ul class="list-inline">
										<li>
											<strong>Package Price</strong>
										</li>
										<li class="pull-right">
											<%= number_to_currency(@package.price) %>
										</li>
									</ul>
								</li>
								<li>
									<ul class="list-inline">
										<li>
											<strong>Installation Price</strong>
										</li>
										<li class="pull-right">
											<% if @package.installation_price.downcase == "free" %>
									  		Free
								  		<% else %>
								  			<%= number_to_currency(@package.installation_price) %>
								  		<% end %>
										</li>
									</ul>
								</li>
								<li>
									<ul class="list-inline">
										<li>
											<strong>Extra Equiptment Price</strong>
										</li>
										<li class="pull-right">
											$
											<%= hidden_field_tag :equiptment_cost, 0 %>
											<span class="equiptment_cost_span">0.00</span>
										</li>
									</ul>
								</li>
								<li>
									<ul class="list-inline">
										<li data-toggle="tooltip" data-placement="top" title="Monthly fee after promotion">
									  	<strong>MFP</strong>
										</li>
										<li class="pull-right">
											<%= @package.monthly_fee_after_promotion %>
										</li>
									</ul>
								</li>
							</ul>
						</div>
						<div class="panel-footer">
							<ul class="list-inline">
								<li>
									Total
								</li>
								<li class="pull-right">
									<%= hidden_field_tag :total_cost, @package.price.to_f.round(2) %>
									<span class="label label-success total_cost_span">
							  		<%= number_to_currency(@package.price) %>
							  	</span>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<%= button_tag "Continue to Payment", type: :submit, class: "btn btn-un btn-lg" %>
		<% end %>
	</div>
</div>
	