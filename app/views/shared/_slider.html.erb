<div id="search-deals">
  <div class="mobile-view">
    <%= render partial: "shared/search_deals" %>
  </div>
  <div class="desktop-view">
    <div id="myCarousel" class="carousel slide">
      <div class="carousel-inner">
        <div class="item active">
          <!--<img src="img/slider/Fotolia_30977559_XS.jpg" alt="slide 1">-->
          <%= image_tag("twc-banner-1.png", class: "slider-img") %>
          <div class="container">
            <div class="carousel-caption">
              <div class="row">
                <div class="col-md-6" style="margin-left: -8.3%;">
                  <%= render partial: "shared/search_deals" %>
                </div>
              </div>
            </div>
          </div>
          <!-- Hot Offers TWC Start -->
          <div class="landing">
            <div class="section-1">
              <div class="row">
                <div class="col-lg-12">
                  <h1 class="page-header text-center">
                    HOT OFFERS
                  </h1>
                </div>
                <%= render partial: "shared/hot_offers/twc" %>
              </div>
            </div>
          </div>
          <!-- Hot Offers TWC End -->
        </div>
        <div class="item">
          <%= image_tag("cox-banner.png", class: "slider-img") %>
          <div class="container">
            <div class="carousel-caption">
              <div class="row">
                <div class="col-md-6" style="margin-left: -8.3%;">
                  <%= render partial: "shared/search_deals" %>
                </div>
              </div>
            </div>
          </div>
          <!-- Hot Offers COX Start -->
          <div class="landing">
            <div class="section-1">
              <div class="row">
                <div class="col-lg-12">
                  <h1 class="page-header text-center">
                    HOT OFFERS
                  </h1>
                </div>
                <%= render partial: "shared/hot_offers/cox" %>
              </div>
            </div>
          </div>
          <!-- Hot Offers COX End -->
        </div>
        <div class="item">
          <%= image_tag("charter-banner.png", class: "slider-img") %>
          <div class="container">
            <div class="carousel-caption">
              <div class="row">
                <div class="col-md-6" style="margin-left: -8.3%;">
                  <%= render partial: "shared/search_deals" %>
                </div>
              </div>
            </div>
          </div>
          <!-- Hot Offers CHARTER Start -->
          <div class="landing">
            <div class="section-1">
              <div class="row">
                <div class="col-lg-12">
                  <h1 class="page-header text-center">
                    HOT OFFERS
                  </h1>
                </div>
                <%= render partial: "shared/hot_offers/charter" %>
              </div>
            </div>
          </div>
          <!-- Hot Offers CHARTER End -->
        </div>
      </div>
      <!-- Controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="fa fa-chevron-left fa-2x"></span></a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="fa fa-chevron-right fa-2x"></span></a>
    </div>
  </div>
  <!-- /.carousel -->
</div>
