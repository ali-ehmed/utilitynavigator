 <div class="tab-content packages-tab-content">
  <div role="tabpanel" class="tab-pane fade in active" id="filter_with_tv">
    <div class="row">
      <div id="cable_packages">
        <%= render partial: "shared/filtered_packages/cable", collection: @tv_packages, as: :tv_package %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <a href="#" class="channel-comparison-link">CHANNEL COMPARISON</a>
      </div>
      <div class="col-md-4 text-center">
        <%= will_paginate @tv_packages, renderer: BootstrapPagination::Rails %>
      </div>
      <div class="col-md-4">
        <button class="btn btn-default pull-right see-more-btn" id="see-more-cable-packages" data-product="cable" onclick="loadPackages(this);">SEE MORE PACKAGES</button>
      </div>
    </div>

  </div>
  <div role="tabpanel" class="tab-pane fade in" id="filter_with_internet">
