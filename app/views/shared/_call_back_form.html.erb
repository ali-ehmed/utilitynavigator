<div class="modal fade" id="call_back" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= simple_form_for CallBack.new, url: call_back_index_path, method: :post, html: { onsubmit: "requestCallback(event);" } do |f |%>
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">
            <div class="panel panel-un">
              <div class="panel-heading">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span>Feel free to Request a Call Back from us!</span>
              </div>
            </div>
          </h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :first_name, placeholder: "First Name" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :last_name, placeholder: "Last Name" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :email, placeholder: "Email" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :phone_no %>
                <div class="input-group">
                  <div class="input-group-addon"><i class="fa fa-mobile"></i></div>
                  <%= f.input :phone_no, label: false, placeholder: "Phone" %>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :address, as: :text, placeholder: "Street Address", input_html: { rows: 8 } %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :state, placeholder: "State" %>
              </div>
              <div class="form-group">
                <%= f.input :zip, placeholder: "Zip Code" %>
              </div>
              <div class="form-group">
                <%= f.label :preferred_time %>
                <div class="input-group" id="call_timings">
                  <span class="input-group-addon"><span class="fa fa-clock-o"></span></span>
                  <%= f.input :preferred_time, label: false, as: :string, placeholder: "Choose your preferred timings" %>
                </div>
                
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <%= button_tag "Submit", type: :submit, class: "btn btn-un" %>
        </div>
      <% end %>
    </div>
  </div>
</div>