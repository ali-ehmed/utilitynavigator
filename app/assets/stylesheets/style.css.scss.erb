//Package Details
#package-details {
  .packages {
    .offers-package-desc {
      height: 300px;
      overflow-y: scroll;
      margin: 18px 0px;
    }
    .offers-package-heading {
      min-height: 101px;
      border-bottom: 1px solid rgba(138, 207, 248, 0.37);
    }
  }
  
  .price-info {
    background:url(<%= asset_path("price-tag-search.png") %>);
    background-size: 100% auto;
    height: 188px;
    text-align: center;
    padding: 11px 3px;
    color: #fff;
    border-radius: 4px 4px 0px 0px;
    background-repeat: no-repeat;
    
    .price {
      font-size: 27px;
      line-height: 40px;
    }
    .price-information {
      font-size: 8px;
    }

    @media(max-width: 768px) {
      margin: 12px 0px;
      padding: 21px 24px;
      border-radius: 4px;

      .price-information {
        font-size: 15px;
      }
    }
  }

  p.package-description {
    margin: 13px 0px;
    line-height: 20px;
  }

  a.detail-link {
    color: #9932cc;
  }

  button.choose-plan-btn {
    color: #000;
    background-color: #F1C40F;
    border-color: #F1C40F;
    font-weight: bold;
    margin-top: 13px;
    margin-left: 13px;
  }
}

